---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/tailwind.css";
import "../styles/global.css";
import "animate.css";
const { title } = Astro.props;
---

<html lang="da">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{Astro.props.title}</title>
    <meta name="description" content={Astro.props.description} />
    <meta property="og:locale" content="da_DK" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={Astro.props.ogtitle} />
    <meta property="og:description" content={Astro.props.ogdescription} />
  </head>
  <body class="max-w-7xl mx-auto">
    <header>
      <Header />
    </header>

    <main class="bg-gradient-to-b from-zinc-900/90 to-zinc-800/90 border-gray-800 w-full backdrop-blur-sm max-w-7xl mx-auto text-gray-100 relative">
      <slot />
    </main>

    <footer>
      <Footer />
    </footer>
  </body>
</html>
